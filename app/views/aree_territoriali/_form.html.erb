<%= simple_form_for(@area_territoriale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :codice %>
    <%= f.association :provincia, :collection => Provincia.all(:order => 'nome'), :label_method => :nome %>
    <%= f.association :banca, :label_method => :nome %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
