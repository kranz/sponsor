<h1>Elenco province</h1>

<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Sigla</th>
    <th>Regione</th>
    <th></th>
  </tr>

<% @province.each do |provincia| %>
  <tr>
    <td><%= link_to provincia.nome, provincia %></td>
    <td><%= provincia.sigla %></td>
    <td><%= link_to 'Modifica', edit_provincia_path(provincia), :class => 'btn' %>
      <%= link_to 'Elimina', provincia, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Crea Provincia', new_provincia_path, :class => 'btn btn-primary' %>
